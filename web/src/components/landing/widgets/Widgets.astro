---
import Chart from "./Chart.astro";
import PlayerWidget from "./PlayerWidget.astro";
import SettingsWidget from "./SettingsWidget.astro";
import Player from "./Player.astro";
import FileTree from "./FileTree.astro";
---

<div id="widgets-grid">
  <Chart />
  <Player />
  <FileTree />
  <PlayerWidget />
  <SettingsWidget />
</div>

<style is:global>
#widgets-grid {
  position: absolute;
  top: 50vh;
  left: 50vw;
  transform: translate(-50%, -50%);
  display: grid;
  max-width: 96ch;
  max-height: 40lh;
  min-width: 80ch;
  min-height: 32lh;
  width: calc(100vw - 4ch);
  height: calc(100vh - 2lh);
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: minmax(8lh, 10lh);
  grid-column-gap: 1ch;
  pointer-events: none;
  /* opacity: 0.75; */

  & > * {
    --box-border-color: var(--background1);
  }
}
</style>
